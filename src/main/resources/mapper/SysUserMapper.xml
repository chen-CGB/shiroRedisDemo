    <insert id="batchAddUserRole">
        insert into sys_user_role
        (user_id, role_id) values
        <foreach collection="roleIds" item="i" separator=",">
            (#{userId},#{i})
        </foreach>
    </insert>


    <delete id="removeUserAllRole">
        delete
        from sys_user_role
        where user_id = #{userId}
    </delete>

    <resultMap id="roleMap" type="com.cgf.vo.UserVo">
        <id column="userId" property="userId"/>
        <result column="username" property="username"/>
        <result column="nickname" property="nickname"/>
        <result column="lastLoginIp" property="lastLoginIp"/>
        <result column="lastLoginTime" property="lastLoginTime"/>
        <collection property="roleIds" ofType="java.lang.Integer">
            <id column="roleId" property="roleId"/>
        </collection>
        <collection property="menuList" ofType="java.lang.String">
            <id column="menuCode" property="menuCode"/>
        </collection>
        <collection property="permissionList" ofType="java.lang.String">
            <id column="permission" property="permission"/>
        </collection>
    </resultMap>
    <select id="getUserPermission" resultMap="roleMap">
        SELECT
        u.user_id userId,
            u.username,
            u.nickname,
            u.last_login_ip lastLoginIp,
            u.last_login_time lastLoginTime,
            r.role_id roleId,
            p.menu_code menuCode,
            p.permission
        FROM
            sys_user u
            LEFT JOIN sys_user_role ur ON ur.user_id = u.user_id
            LEFT JOIN sys_role r ON r.role_id = ur.role_id
            LEFT JOIN sys_role_permission rp ON r.role_id = rp.role_id
            LEFT JOIN sys_permission p ON rp.permission_id = p.permission_id
        WHERE
            u.username = #{username}
    </select>

</mapper>
