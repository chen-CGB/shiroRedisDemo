<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cgf.mapper.SysUserMapper">
    <sql id="Base_Column_List" >
    id, email,last_login_time, sex, school, major, expect_position, user_name, password, create_data,
    birthday, permission,education,end_time,address
  </sql>

